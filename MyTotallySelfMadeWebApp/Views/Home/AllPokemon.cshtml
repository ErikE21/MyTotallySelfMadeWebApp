@using System.Drawing
@model List<PokeApiNet.Pokemon>
@{
    var TypeColors = ViewBag.TypeColors as Dictionary<string, Color>;

}
<div class="text-center">
    <h1 class="display-4"></h1>
    <div class="table-container">
        <table>
            <tr>
                <th class="dex-column">Dex Nr.</th>
                <th>Pokemon Name</th>
                <th>Type(s)</th>
            </tr>

            @foreach (var pokemon in Model)
            {
                <tr>
                    <td class="dex-column">@pokemon.Id</td>
                    <td class="Name-column">@pokemon.Name</td>
                    @if (pokemon.Types.Count == 1)
                    {
                        var typeColor = TypeColors.Where(x => x.Key == pokemon.Types[0].Type.Name).FirstOrDefault();
                        <td class="type-column" style="background-color: rgba(@typeColor.Value.R,@typeColor.Value.G,@typeColor.Value.B,@typeColor.Value.A);">
                            @pokemon.Types[0].Type.Name (@typeColor.Value)
                        </td>
                    }
                    else
                    {
                        <td class="type-column" style="background-color: #D9AFD9;background-image: linear-gradient(0deg, #D9AFD9 0%, #97D9E1 100%);">
                            @($"{pokemon.Types[0].Type.Name} + {pokemon.Types[1].Type.Name}")
                        </td>
                    }
                </tr>
            }
        </table>
    </div>
</div>

<style>
    .text-center {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .table-container {
        display: flex;
        justify-content: center;
        width: 100%;
    }

    table {
        border-collapse: collapse;
        width: 50%;
    }

    th, td {
        border: 1px solid black;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    .dex-column {
        width: 12%;
    }

    .name-column {
    }

    .type-column {
        width: 25%;
    }
</style>
